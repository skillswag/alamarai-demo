    <rect x="80" y="250" width="240" height="200" rx="10" fill="#006633" opacity="0.9"/>
    <text x="200" y="330" font-family="Arial" font-size="48" font-weight="bold" fill="#ffffff" text-anchor="middle">ALMARAI</text>
    <text x="200" y="380" font-family="Arial" font-size="32" fill="#ffffff" text-anchor="middle">Fresh Milk</text>
    <text x="200" y="420" font-family="Arial" font-size="24" fill="#ffffff" text-anchor="middle">Full Cream</text>
  </g>
  
  <!-- Text overlay -->
  <text x="960" y="950" font-family="Arial" font-size="36" font-weight="bold" fill="#006633" text-anchor="middle" opacity="0.7">AI-Generated Product Visual</text>
